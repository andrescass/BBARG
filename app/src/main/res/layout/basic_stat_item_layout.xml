<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    >

    <ImageView
        android:id="@+id/basic_stat_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/basic_stat_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/basic_stat_item_icon"
        android:layout_margin="5dp"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        />

    <ImageButton
        android:id="@+id/basic_stat_item_up"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_action_up"
        android:background="@color/colorPrimaryLight"/>

    <ImageButton
        android:id="@+id/basic_stat_item_down"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/basic_stat_item_up"
        android:layout_toLeftOf="@+id/basic_stat_item_up"
        android:layout_margin="5dp"
        android:src="@drawable/ic_action_down"
        android:background="@color/colorPrimaryLight"
        />

    <EditText
        android:id="@+id/basic_stat_item_value"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/basic_stat_item_down"
        android:layout_margin="5dp"
        android:background="@color/colorAccent"
        android:textColor="@color/secondaryTextColor"
        android:gravity="end"
        android:inputType="number"
        android:textSize="20sp"
        />




</RelativeLayout>